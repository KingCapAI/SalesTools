# Production Environment Variables for Railway

# Database (Railway provides PostgreSQL - recommended for production)
# DATABASE_URL will be auto-injected by Railway if you add a PostgreSQL plugin
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT - Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secure-random-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Microsoft OAuth (update redirect URI in Azure to your production URL)
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# App URLs (update after deployment)
FRONTEND_URL=https://your-app.pages.dev
BACKEND_URL=https://your-backend.up.railway.app

# Upload settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=25
