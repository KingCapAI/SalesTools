# Database
DATABASE_URL=sqlite:///./data/kingcap.db

# JWT
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Microsoft OAuth (get from Azure Portal - App Registrations)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# Gemini API (get from Google AI Studio)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
# Optional: Separate API key for Mockup Builder (falls back to main key if not set)
GOOGLE_GEMINI_API_KEY_MOCKUP=your-mockup-gemini-api-key

# App URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
